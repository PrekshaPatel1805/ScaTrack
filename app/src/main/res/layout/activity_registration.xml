<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.l.scatrack.Registration">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:id="@+id/personal_l">

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="PERSONAL_INFO"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:id="@+id/personal"
            android:background="@color/logocolor"/>


    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dp"
        android:fillViewport="false"
        android:layout_gravity="right">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:id="@+id/fadein"
            android:visibility="invisible">



            <!--<ScrollView-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_gravity="right">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:id="@+id/imageView"
                    android:adjustViewBounds="true"
                    android:layout_centerHorizontal="true"
                    android:contentDescription=""
                    android:layout_gravity="center"
                    android:src="@drawable/abc123"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <EditText
                    android:drawablePadding="2dp"
                    android:drawableStart="@drawable/ic_account_circle_black_24dp"
                    android:background="@drawable/edittextstyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/fname"
                    android:hint="First Name"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_account_circle_black_24dp" />
                <EditText
                    android:drawableStart="@drawable/ic_account_box_black_24dp"
                    android:background="@drawable/edittextstyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/lname"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"
                    android:hint="Last Name"
                    android:drawableLeft="@drawable/ic_account_box_black_24dp" />
                <EditText
                    android:drawableStart="@drawable/ic_email_black_24dp"
                    android:background="@drawable/edittextstyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/email"
                    android:hint="Email"
                    android:layout_marginTop="6dp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_email_black_24dp" />

                <EditText
                    android:drawableStart="@drawable/ic_lock_outline_black_24dp"
                    android:background="@drawable/edittextstyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/password"
                    android:hint="Password"
                    android:layout_marginTop="6dp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_lock_outline_black_24dp" />

                <EditText
                    android:drawableStart="@drawable/ic_phone_in_talk_black_24dp"
                    android:background="@drawable/edittextstyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/contact"
                    android:hint="Contact"
                    android:layout_marginTop="6dp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_phone_in_talk_black_24dp" />

                <EditText
                    android:drawableStart="@drawable/ic_school_black_24dp"
                    android:background="@drawable/edittextstyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/profession"
                    android:hint="Profession"
                    android:layout_marginTop="6dp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_school_black_24dp" />

                <EditText
                    android:drawableStart="@drawable/ic_cake_black_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/edittextstyle"
                    android:id="@+id/birthday"
                    android:hint="Birthday"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_cake_black_24dp" />

                <EditText
                    android:drawableStart="@drawable/ic_language_black_24dp"
                    android:background="@drawable/edittextstyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/link"
                    android:hint="Link"
                    android:layout_marginTop="6dp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_language_black_24dp" />
                <EditText
                    android:drawableStart="@drawable/ic_store_mall_directory_black_24dp"
                    android:background="@drawable/edittextstyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/address"
                    android:hint="Address"
                    android:layout_marginTop="6dp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_store_mall_directory_black_24dp" />


                <EditText
                    android:drawableStart="@drawable/ic_create_black_24dp"
                    android:background="@drawable/edittextstyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/desc"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"
                    android:hint="Description"
                    android:drawableLeft="@drawable/ic_create_black_24dp" />

                <EditText
                    android:drawableStart="@drawable/ic_school_black_24dp"
                    android:background="@drawable/edittextstyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/reg_date"
                    android:hint="Registration Date"
                    android:layout_marginTop="6dp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_school_black_24dp" />


                <Button
                    android:background="@drawable/edittextstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Submit"
                    android:id="@+id/submit"
                    android:layout_marginTop="2dp"
                    android:textStyle="bold"/>

            </LinearLayout>


            <!--</ScrollView>-->
        </LinearLayout>
    </ScrollView>


</LinearLayout>

